# Ripples
epic
/*Trying oot Ripples
Jason.S Programming 11
*/

ArrayList<Ripple> myRipples;

void setup(){
 size(800,800);
 fill(0);
 myRipples = new ArrayList<Ripple>();
 
 int i = 0;
 while (i<100){
  myRipples.add(new Ripple() );
   
   
   i++;
   
 }
  
  
  
}

void draw(){
  background(0);
  
  int i = 0;
 while(i < 100){
  Ripple r = myRipples.get(i);
  r.act();
  r.show();
   i++;
   
 }

  
  
  
  
  
  
  
  
}
